<?xml version="1.0" encoding="UTF-8"?>
<allocation:CPS
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:allocation="allocation"
    xsi:schemaLocation="allocation Allocation.ecore"
    broker="tcp://localhost:1883">
  <hardwares
      name="LightHardware">
    <instances
        yakindu="//@yakindusm.1"
        clientId="LightClient"/>
  </hardwares>
  <hardwares
      name="SwitchHardware">
    <instances
        yakindu="//@yakindusm.0"
        clientId="SwitchClient"/>
  </hardwares>
  <topic name="LightSwitch"/>
  <yakindusm
      timer="true"
      observer="true"
      name="SwitchSM">
    <outEvents
        interface="Publish"
        name="onTurnOn"/>
    <outEvents
        interface="Publish"
        name="onTurnOff"/>
    <inEvents
        interface="Controls"
        name="turnOn"/>
  </yakindusm>
  <yakindusm
      name="Light">
    <inEvents
        interface="Controls"
        name="turnOn"/>
    <inEvents
        interface="Controls"
        name="turnOff"/>
  </yakindusm>
</allocation:CPS>
