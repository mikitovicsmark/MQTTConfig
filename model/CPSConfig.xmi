<?xml version="1.0" encoding="UTF-8"?>
<allocation:CPS
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:allocation="allocation"
    xsi:schemaLocation="allocation Allocation.ecore"
    broker="tcp://localhost:1883">
  <hardwares
      name="LightRunner"/>
  <hardwares
      name="SwitchRunner"/>
  <topic name="SwitchTopic"
      message="TurnOff"/>
  <topic name="SwitchTopic"
      message="TurnOn"/>
  <yakindusm
      name="Light">
    <inEvents
        interface="Controls"
        name="turnOn"/>
    <inEvents
        interface="Controls"
        name="turnOff"/>
  </yakindusm>
  <yakindusm
      name="SwitchSM">
    <outEvents
        interface="Publish"
        name="onTurnOn"/>
    <outEvents
        interface="Publish"
        name="onTurnOff"/>
    <inEvents
        interface="Controls"
        name="turnOn"/>
  </yakindusm>
</allocation:CPS>
